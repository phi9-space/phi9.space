---
interface Props {
  tags: string[];
  activeTag?: string | null;
  placement?: 'rail' | 'inline';
}

const { tags, activeTag = null, placement = 'rail' } = Astro.props as Props;
const sorted = [...new Set(tags)].sort((a, b) => a.localeCompare(b));
const slotName = placement === 'rail' ? 'rail' : undefined;
---
<section class:list={{ 'tag-filter': true, 'tag-filter--inline': placement === 'inline' }} slot={slotName}>
  <p class="tag-filter__title">Tags</p>
  <ul>
    <li>
      <a
        href="/blog/"
        class:list={{ 'tag-filter__active': !activeTag, 'tag-filter__link': true }}
      >
        All
      </a>
    </li>
    {sorted.map((tag) => (
      <li>
        <a
          href={`/blog/?tag=${encodeURIComponent(tag)}`}
          class:list={{ 'tag-filter__active': activeTag === tag, 'tag-filter__link': true }}
        >
          #{tag}
        </a>
      </li>
    ))}
  </ul>
</section>

<style>
  .tag-filter {
    display: grid;
    gap: 0.75rem;
    width: 100%;
  }

  .tag-filter__title {
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.75rem;
    color: rgba(40, 40, 40, 0.55);
    margin: 0;
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.5rem;
  }

  .tag-filter__link {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.5rem 0.75rem;
    color: rgba(32, 32, 32, 0.72);
    border: 1px solid rgba(32, 32, 32, 0.12);
    border-radius: var(--radius-chip);
    transition: border-color 150ms ease, background-color 150ms ease, color 150ms ease;
  }

  .tag-filter__link:hover {
    color: var(--color-primary);
    border-color: rgba(32, 32, 32, 0.2);
    background: rgba(0, 0, 0, 0.02);
  }

  .tag-filter__active {
    color: var(--color-primary);
    border-color: var(--color-accent);
    background: color-mix(in srgb, var(--color-accent) 15%, transparent);
    box-shadow: 0 4px 12px color-mix(in srgb, var(--color-accent) 20%, transparent);
  }

  .tag-filter__active:hover {
    background: color-mix(in srgb, var(--color-accent) 20%, transparent);
  }

  .tag-filter--inline {
    gap: 0.5rem;
    align-items: flex-start;
    justify-items: flex-start;
    margin-bottom: clamp(1.75rem, 4vw, 2.5rem);
  }

  .tag-filter--inline ul {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .tag-filter--inline .tag-filter__link {
    padding: 0.35rem 0.65rem;
    font-size: 0.85rem;
  }
</style>
