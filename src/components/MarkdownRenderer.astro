---
interface Heading {
	depth: number;
	slug: string;
	text: string;
}

interface Props {
	Content: any;
	raw: string;
	headings?: Heading[];
}

const { Content, raw, headings = [] } = Astro.props as Props;
---
<div class="markdown-renderer">
  <div class="markdown-renderer__human">
    <Content />
  </div>
  <pre class="markdown-renderer__ai glass-panel"><code>{raw.trim()}</code></pre>
</div>

{headings.length > 0 && (
  <aside slot="rail" class="markdown-renderer__toc">
    <p class="markdown-renderer__toc-title">On this page</p>
    <ul>
      {headings.map((heading) => (
        <li class:list={{ [`depth-${heading.depth}`]: true }}>
          <a href={`#${heading.slug}`}>{heading.text}</a>
        </li>
      ))}
    </ul>
  </aside>
)}

<style>
  .markdown-renderer {
    display: grid;
    gap: 2.25rem;
  }

  .markdown-renderer__human :global(*) {
    line-height: var(--line-height-base);
  }

  .markdown-renderer__human :global(h1) {
    font-size: clamp(2rem, 3.5vw, 2.75rem);
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-bottom: 1.5rem;
  }

  .markdown-renderer__human :global(h2) {
    font-size: clamp(1.5rem, 2.75vw, 2rem);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .markdown-renderer__human :global(h3) {
    font-size: clamp(1.2rem, 2.25vw, 1.5rem);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .markdown-renderer__human :global(p) {
    margin: 1rem 0;
    color: var(--color-muted);
  }

  .markdown-renderer__human :global(ul),
  .markdown-renderer__human :global(ol) {
    padding-left: 1.5rem;
    margin: 1rem 0;
    color: var(--color-muted);
  }

  .markdown-renderer__human :global(li) {
    margin-bottom: 0.5rem;
  }

  .markdown-renderer__human :global(a) {
    font-weight: 500;
  }

  .markdown-renderer__human :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    font-size: 0.95rem;
  }

  .markdown-renderer__human :global(th),
  .markdown-renderer__human :global(td) {
    border: 1px solid rgba(255, 255, 255, 0.08);
    padding: 0.75rem 1rem;
  }

  .markdown-renderer__ai {
    display: none;
    font-size: 0.85rem;
    line-height: 1.5;
    color: rgba(245, 245, 245, 0.92);
  }

  [data-view-mode='ai'] .markdown-renderer__human {
    display: none;
  }

  [data-view-mode='ai'] .markdown-renderer__ai {
    display: block;
    background: rgba(0, 0, 0, 0.75);
    border-radius: 1rem;
  }

  .markdown-renderer__toc {
    position: sticky;
    top: var(--grid-padding);
    display: grid;
    gap: 1rem;
  }

  .markdown-renderer__toc-title {
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-size: 0.75rem;
    color: rgba(40, 40, 40, 0.55);
    margin: 0;
  }

  .markdown-renderer__toc ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.5rem;
  }

  .markdown-renderer__toc li a {
    color: rgba(40, 40, 40, 0.7);
    font-size: 0.9rem;
  }

  .markdown-renderer__toc li.depth-3 {
    padding-left: 0.75rem;
    font-size: 0.85rem;
  }

  .markdown-renderer__toc li.depth-4 {
    padding-left: 1.25rem;
    font-size: 0.75rem;
  }

</style>
